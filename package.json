{
  "name": "@compositor/logo",
  "version": "1.3.1",
  "description": "Logo and app icons for Compositor",
  "main": "dist/index.js",
  "scripts": {
    "dev:iso": "repng src/Iso.js --dev -c src/style.css -p 9000",
    "dev:zero": "repng src/Zero.js --dev -c src/style.css -p 9001",
    "dev:lab": "repng src/Lab.js --dev -c src/style.css -p 9002",
    "png": "npm run logo-png && npm run zero-png && npm run lens-png && npm run grid-png && npm run lab-png && npm run iso-png",
    "logo-png": "repng src/Logo.js -o dist -f compositor -w 1024 -h 1024",
    "zero-png": "repng src/Zero.js -o dist -f zero -w 1024 -h 1024 -c src/style.css",
    "lens-png": "repng src/Lens.js -o dist -f lens -w 1024 -h 1024 -c src/style.css",
    "lab-png": "repng src/Lab.js -o dist -f lab -w 1024 -h 1024 -c src/style.css",
    "iso-png": "repng src/Iso.js -o dist -f iso -w 1024 -h 1024 -c src/style.css",
    "grid-png": "repng src/Grid.js -o dist -f logo-grid -w 1024 -h 1024",
    "icns": "npm run zero-icns && npm run lens-icns && npm run lab-icns && npm run iso-icns",
    "zero-icns": "nicns --in dist/zero.png --out dist/zero.icns",
    "lens-icns": "nicns --in dist/lens.png --out dist/lens.icns",
    "lab-icns": "nicns --in dist/lab.png --out dist/lab.icns",
    "iso-icns": "nicns --in dist/iso.png --out dist/iso.icns",
    "ico": "npm run zero-ico && npm run lens-ico && npm run lab-ico && npm run iso-ico",
    "zero-ico": "to-ico dist/zero.png > dist/zero.ico",
    "lens-ico": "to-ico dist/lens.png > dist/lens.ico",
    "lab-ico": "to-ico dist/lab.png > dist/lab.ico",
    "iso-ico": "to-ico dist/iso.png > dist/iso.ico",
    "favicon": "sharp -i dist/compositor.png -o ./ resize 32 32 && mv compositor.png dist/favicon.png",
    "babel": "babel src -d dist",
    "prepublish": "npm run babel && npm run png && npm run icns && npm run ico &&npm run favicon"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "node-icns": "0.0.4",
    "repng": "^2.0.0-alpha.1",
    "sharp-cli": "^1.3.0"
  },
  "dependencies": {
    "node-gyp": "^3.6.2",
    "palx": "^1.0.2",
    "rebuild": "^0.1.2",
    "to-ico-cli": "^1.0.0"
  }
}
