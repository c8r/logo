{
  "name": "@compositor/logo",
  "version": "1.2.2",
  "description": "Logo and app icons for Compositor",
  "main": "dist/index.js",
  "scripts": {
    "dev": "repng src/Zero.js --dev -c src/style.css",
    "png": "npm run logo-png && npm run zero-png && npm run lens-png && npm run grid-png && npm run lab-png",
    "logo-png": "repng src/Logo.js -o dist -f compositor -w 1024 -h 1024",
    "zero-png": "repng src/Zero.js -o dist -f zero -w 1024 -h 1024 -c src/style.css",
    "lens-png": "repng src/Lens.js -o dist -f lens -w 1024 -h 1024 -c src/style.css",
    "lab-png": "repng src/Lab.js -o dist -f lab -w 1024 -h 1024 -c src/style.css",
    "grid-png": "repng src/Grid.js -o dist -f logo-grid -w 1024 -h 1024",
    "icns": "npm run zero-icns && npm run lens-icns && npm run lab-icns",
    "zero-icns": "nicns --in dist/zero.png --out dist/zero.icns",
    "lens-icns": "nicns --in dist/lens.png --out dist/lens.icns",
    "lab-icns": "nicns --in dist/lab.png --out dist/lab.icns",
    "favicon": "sharp -i dist/compositor.png -o ./ resize 32 32 && mv compositor.png dist/favicon.png",
    "babel": "babel src -d dist",
    "prepublish": "npm run babel && npm run png && npm run icns && npm run favicon"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "node-icns": "0.0.4",
    "repng": "^2.0.0-alpha.1",
    "sharp-cli": "^1.3.0"
  },
  "dependencies": {
    "node-gyp": "^3.6.2",
    "palx": "^1.0.2",
    "rebuild": "^0.1.2"
  }
}
